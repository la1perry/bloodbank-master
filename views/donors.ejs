<%- include layouts/header.ejs %>

        <div class="page-data">
         <div class="data-btn">
                <a class="a-inside add" href="../donors/add">Add</a>
                
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <!-- <th width="50px">No</th> -->
                    <th>Id</th>
                    <th>Name</th>
                    <th>Sex</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th width="120px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <!-- <td><%=(i+1)%></td> -->
                    <td><%=data[i].id%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].sex%></td>
                    <td><%=data[i].age%></td>
                    <td><%=data[i].address%></td>
                    <td><%=data[i].phone%></td>
                    <td>
                        <a class="a-inside edit" href="../donors/edit/<%=data[i].id%>">Edit</a>
                       
                        <a class="a-inside delete" href="../donors/delete/<%=data[i].id%>">Delete</a>
                        
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>
        
<%- include layouts/footer.ejs %>