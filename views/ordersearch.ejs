         <form method="post" action="/ordersearch">
            <table cellpadding="11">
                    <tr>
                            <td class="label">Hospital ID</td><td>: <input type="text" name="id" required></td>
                         </tr>
                         <tr>
                             <td><input type="submit" name="submit" value="Search"></td>
                         </tr>
                        </table>
                    </form>

         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <!-- <th width="50px">No</th> -->
                    <th>Hospital Id</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Order Id</th>
                    <th>Bloodbank Id</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Date</th>
                    
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <!-- <td><%=(i+1)%></td> -->
                    <td><%=data[i].hid%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].address%></td>
                    <td><%=data[i].phone%></td>
                    <td><%=data[i].oid%></td>
                    <td><%=data[i].bloodbank%></td>
                    <td><%=data[i].type%></td>
                    <td><%=data[i].amount%></td>
                    <td><%=data[i].date%></td>
                
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>
        
